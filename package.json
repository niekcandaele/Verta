{
  "name": "verta",
  "version": "1.0.0",
  "description": "Modern ESM TypeScript Express application",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "migrate:up": "tsx scripts/migrate.ts up",
    "migrate:down": "tsx scripts/migrate.ts down",
    "migrate:latest": "tsx scripts/migrate.ts latest",
    "migrate:status": "tsx scripts/migrate.ts status"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "kysely": "^0.28.2",
    "pg": "^8.16.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.2.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "kysely-ctl": "^0.13.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.0",
    "supertest": "^7.1.3",
    "testcontainers": "^11.2.1",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
